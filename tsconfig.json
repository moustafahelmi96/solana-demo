{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@modules/*": ["modules/*"],
      "@navigation/*": ["navigation/*"],
      "@shared/*": ["shared/*"],
      "@services/*": ["services/*"]
    }
  },
  "eslintConfig": {
    "rules": {
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}
